<%- include('./partials/head') %>
<main>
  <!-- Div is leeg, maar is onderdeel van client-side script voor menu -->
  <div></div>
 

<form class="login" action="/dashboard" method="get">

  <section class="margin">
    <h2>Kies uw bedrijf om te beginnen met werken!</h2>
  </section>

    <!-- Hier kunnen mensen kiezen met welk bedrijf ze willen inloggen. Werkt nog niet, heb hulp nodig om dit goed in de server neer te zetten -->
  <section class="custom-select">
    <select name="companies" id="hfcompany">
      <option value="" disabled selected>Selecteer een bedrijf</option>
      <% companies.forEach(company => { %>
        <option value="<%=company.id%>" name="bedrijf" id="bedrijf">
          <%= company.name %>
        </option>
        <% }) %>
      </option>
     
    </select>
  </section>
  
  <!-- Hier kunnen bedrijven inloggen met hun gegevens -->
  <label for="username">E-mail:</label>
  <input type="email" id="email" pattern=".+@example\.com" size="30">
 
  <label for="password">Wachtwoord:</label>
  <input type="password" id="password" name="password">
  
  <input type="submit" value="Log in">
</form>
</main>





